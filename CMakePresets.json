{
  "version": 5,
  "cmakeMinimumRequired": { "major": 3, "minor": 21 },

  "include": [],

  "configurePresets": [
    {
      "name": "base",
      "displayName": "Base (Ninja, local compilers)",
      "description": "Common settings all other presets inherit",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "OPENDAQ_ENABLE_TESTS": false,
        "OPENDAQ_ENABLE_TEST_UTILS": false,
        "OPENDAQ_ENABLE_ACCESS_CONTROL": false,
        "OPENDAQ_ENABLE_NATIVE_STREAMING": true,
        "DAQMODULES_OPENDAQ_CLIENT_MODULE": true,
        "DAQMODULES_REF_DEVICE_MODULE": true,
        "DAQMODULES_REF_FB_MODULE": true,
        "DAQMODULES_REF_FB_MODULE_ENABLE_RENDERER": false
      },
      "environment": {
        "CC": "cc",
        "CXX": "c++"
      }
    }
  ]
}
